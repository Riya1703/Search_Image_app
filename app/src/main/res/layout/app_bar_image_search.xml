<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    app:contentInsetStart="0dp"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_back_arrow_black"
            android:scaleType="center"
            android:paddingTop="@dimen/v8dp"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/v12dp"
            android:contentDescription="@string/app_name"
            android:paddingEnd="@dimen/v12dp"
            android:paddingBottom="@dimen/v8dp"
            android:layout_centerVertical="true"
            android:layout_gravity="start|center_vertical"
            android:id="@+id/iv_app_bar_back_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <TextView
            android:textColor="@color/colorAppBarTitle"
            android:layout_toEndOf="@+id/iv_app_bar_back_close"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            tools:text="Image Name"
            android:layout_width="wrap_content"
            android:textSize="@dimen/txtSize17"
            android:paddingTop="@dimen/v8dp"
            android:paddingBottom="@dimen/v8dp"
            android:textAllCaps="false"
            android:id="@+id/tv_app_bar_title"
            android:layout_height="wrap_content"
            />

        <View
            android:background="@drawable/toolbar_dropshadow"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/v16dp"
            android:layout_below="@+id/tv_app_bar_title"
            android:id="@+id/view_app_bar_search_filter_phone"
            android:layout_height="@dimen/v2dp"
            />

</RelativeLayout>